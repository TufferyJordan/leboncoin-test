<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".presentation.MainActivity">

    <FrameLayout
        android:id="@+id/main_activity_fragment_container"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@+id/main_activity_toolbar"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <android.support.constraint.ConstraintLayout
        android:id="@+id/main_activity_toolbar"
        android:layout_width="0dp"
        android:layout_height="@dimen/toolbar_size"
        android:background="@color/cardview_dark_background"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent">

        <Button
            android:id="@+id/main_activity_button_album"
            android:layout_width="@dimen/image_size"
            android:layout_height="@dimen/image_size"
            android:layout_margin="@dimen/big_gap"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:drawableTop="@drawable/btn_album"
            android:padding="@dimen/middle_gap"
            android:text="@string/albums_title"
            android:textSize="@dimen/button_text_size"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="@+id/main_activity_button_back"
            app:layout_constraintRight_toRightOf="@+id/main_activity_button_back"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageButton
            android:id="@+id/main_activity_button_back"
            android:layout_width="@dimen/image_size"
            android:layout_height="@dimen/image_size"
            android:layout_margin="@dimen/big_gap"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:textSize="@dimen/button_text_size"
            android:src="@drawable/btn_back"
            android:visibility="invisible"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@+id/main_activity_button_photo"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/main_activity_button_photo"
            android:layout_width="@dimen/image_size"
            android:layout_height="@dimen/image_size"
            android:layout_margin="@dimen/big_gap"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:drawableTop="@drawable/btn_photo"
            android:padding="@dimen/middle_gap"
            android:text="@string/photos_title"
            android:textSize="@dimen/button_text_size"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toRightOf="@+id/main_activity_button_back"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </android.support.constraint.ConstraintLayout>

</android.support.constraint.ConstraintLayout>