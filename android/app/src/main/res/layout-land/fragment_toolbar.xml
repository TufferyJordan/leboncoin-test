<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="@dimen/toolbar_size"
    android:layout_height="match_parent"
    android:background="@color/cardview_dark_background">

    <Button
        android:id="@+id/main_activity_button_album"
        android:layout_width="@dimen/image_size"
        android:layout_height="@dimen/image_size"
        android:layout_margin="@dimen/big_gap"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:drawableTop="@drawable/btn_album"
        android:text="@string/albums_title"
        android:textSize="@dimen/button_text_size"
        app:layout_constraintBottom_toBottomOf="@+id/main_activity_button_back"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/main_activity_button_back" />

    <ImageButton
        android:id="@+id/main_activity_button_back"
        android:layout_width="@dimen/image_size"
        android:layout_height="@dimen/image_size"
        android:layout_margin="@dimen/big_gap"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:src="@drawable/btn_back"
        android:visibility="invisible"
        app:layout_constraintBottom_toTopOf="@+id/main_activity_button_photo"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/main_activity_button_photo"
        android:layout_width="@dimen/image_size"
        android:layout_height="@dimen/image_size"
        android:layout_margin="@dimen/big_gap"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:drawableTop="@drawable/btn_photo"
        android:padding="@dimen/middle_gap"
        android:text="@string/photos_title"
        android:textSize="@dimen/button_text_size"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/main_activity_button_back" />
</android.support.constraint.ConstraintLayout>